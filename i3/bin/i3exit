#!/bin/sh
lock() {
    i3lock -d -i ~/.img/mrrobot.png
    xset dpms force off
}

case "$1" in
    lock)
        lock
        ;;
    logout)
        i3-msg exit
        ;;
    hibernate)
        lock && loginctl hibernate
        ;;
    suspend)
        lock && loginctl suspend
        ;;
    reboot)
        sudo shutdown -r now
        ;;
    shutdown)
        sudo shutdown -P now
        ;;
    *)
        echo "Usage: $0 {lock|logout|hibernate|reboot|shutdown}"
        exit 2
esac

exit 0
